{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "typeRoots": [
      "./src/typings", "./node_modules/@types"],
    "esModuleInterop": true,
    "inlineSources": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
